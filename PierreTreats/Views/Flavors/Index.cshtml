@{
	Layout = "_Layout";
}

@using PierreTreats.Models

<h3>Our Delicious Flavors:</h3>

@if (Model.Count == 0)
{
	<p>No Flavors are in our database, but they must certainly exist!  @Html.ActionLink("Add one?", "Create")</p> 
}
else
{
	<ul>
		@foreach(Flavor flavor in Model)
		{
			<li>@Html.ActionLink($"{flavor.Name}", "Details", new {id=flavor.FlavorId})</li>
		}
	</ul>

	<p>@Html.ActionLink("Add a new Flavor", "Create")</p>
}